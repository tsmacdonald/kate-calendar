<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Month</th>
      <th>Year</th>
      <th>Venue</th>
      <th>Title</th>
      <th>Location</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.day %></td>
        <td><%= event.month %></td>
        <td><%= event.year %></td>
        <td><%= event.venue %></td>
        <td><%= event.title %></td>
        <td><%= event.location %></td>
        <td><%= event.time %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<pre>
<%= Event.generate_html(@events) %>
</pre>

<textarea value="#{Event.generate_html(@events)}" disabled=true>
</textarea>

<br>

<%= link_to 'New Event', new_event_path %>
